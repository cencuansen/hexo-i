.code-ops 
    z-index 1
    width 100%
    color #000
    display flex
    position relative
    margin-bottom -43px
    pointer-events: none;
    flex-direction row-reverse
.code-op
    width 60px
    cursor pointer
    font-size .9rem
    user-select none
    text-align center
    pointer-events: auto;
    box-sizing border-box
.code-op:hover
    color red
figure.highlight.code-fold
    td.gutter
        display: none;
    td.code span,br:nth-of-type(n+2) 
        display: none;
.copy-code-temp
    top -9999px
    left -9999px
    position absolute
.highlight + .code-ops
    // 如果两个代码块相邻，设置一下距离
    margin-top 1em